<h1>Tasks</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.description %></td>
                <td><%= link_to task.completed ? "true" : "false", complete_task_path(task), method: :post %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "Create new task", new_project_task_path %>
